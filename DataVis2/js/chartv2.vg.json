{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 350,
    "height": 275,
    "title": "",
    "data": {
      "url": "https://raw.githubusercontent.com/mvitas1/3179/main/DataVis2/data/world-data-2023.csv"
    },
    "params": [
        {
          "name": "country_selection",
          "bind": {
            "input": "select",
            "options": [null, "Australia"],
            "labels": ["Show All", "Australia"],
            "name": "Country Selection: "
          }
        }
      ],
    "transform": [
      {
        "filter": "datum['Minimum wage'] != null && datum['Unemployment rate'] != null"
      },
      {
        "filter": "!(datum['Country'] === 'Tuvalu' || datum['Country'] === 'Monaco' || datum['Country'] === 'Andorra')"
      },
      {
        "filter": "datum['Minimum wage'] > 0 && datum['Unemployment rate'] > 0"
      },
      {
        "filter": "country_selection == null || datum.Country == country_selection"
      }
    ],
    "mark": "point",
    "encoding": {
      "x": {
        "field": "Minimum wage",
        "type": "quantitative",
        "scale": {"zero": false}
      },
      "y": {
        "field": "Unemployment rate",
        "type": "quantitative",
        "scale": {"zero": false}
      },
      "color": {
        "field": "Country",
        "type": "nominal",
        "scale": {
          "domain": {"param": "country_selection"},
          "range": ["#1f77b4"]
        },
        "legend": null
      },
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Unemployment rate", "type": "quantitative", "title": "Unemployment rate"},
        {"field": "Minimum wage", "type": "quantitative", "title": "Minimum wage"}
      ]
    }
  }


  
  

  