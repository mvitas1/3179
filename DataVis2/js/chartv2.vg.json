{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 350,
    "height": 275,
    "title": "",
    "data": {
      "url": "https://raw.githubusercontent.com/mvitas1/3179/main/DataVis2/data/world-data-2023.csv"
    },
    "params": [
        {
          "name": "country_selection",
          "bind": {
            "input": "select",
            "options": [null, "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Australia/Oceania"],
            "labels": ["Show All", "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"],
            "name": "Continent Selection: "
          }
        }
      ],
    "transform": [
      {
        "filter": "datum['Minimum wage'] != null && datum['Unemployment rate'] != null"
      },
      {
        "filter": "!(datum['Country'] === 'Tuvalu' || datum['Country'] === 'Monaco' || datum['Country'] === 'Andorra')"
      },
      {
        "filter": "datum['Minimum wage'] > 0 && datum['Unemployment rate'] > 0"
      },
      {
        "filter": "country_selection == null || datum.Continent == country_selection"
      }
    ],
    "mark": {
      "type": "circle",
      "size": 100
    },
    "encoding": {
      "x": {
        "field": "Minimum wage",
        "type": "quantitative",
        "title": "Minimum Wage ($USD)",
        "scale": {"zero": false}
      },
      "y": {
        "field": "Unemployment rate",
        "type": "quantitative",
        "scale": {"zero": false}
      },
      "color": {
        "field": "Continent",
        "type": "nominal",
        "scale": {
          "domain": [
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Australia/Oceania"
          ],
          "range": [
            "#e41a1c",
            "#984ea3",
            "#ff7f00",
            "#a6cee3",
            "#377eb8",
            "#a65628"
          ]
        }
      },
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Unemployment rate", "type": "quantitative", "title": "Unemployment rate"},
        {"field": "Minimum wage", "type": "quantitative", "title": "Minimum wage"}
      ]
    }
  }


  
  

  