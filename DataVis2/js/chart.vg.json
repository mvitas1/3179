{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 350,
    "height": 275,
    "title": "",
    "data": {
      "url": "https://raw.githubusercontent.com/mvitas1/3179/main/DataVis2/data/world-data-2023.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Population: "
        }
      },
      {
        "name": "country_selection",
        "bind": {
          "input": "select",
          "options": [null, "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Australia/Oceania"],
          "labels": ["Show All", "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum['Life expectancy'] != null && datum['Birth Rate'] != null"},
      {"filter": "!(datum['Country'] === 'Tuvalu' || datum['Country'] === 'Monaco' || datum['Country'] === 'Andorra')"},
      {"filter": "datum['Life expectancy'] > 0 && datum['Birth Rate'] > 0"},
      {"filter": "datum.Population > Population_Above"},
      {
        "filter": "country_selection == null || datum.Continent == country_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "Infant mortality",
        "type": "quantitative",
        "title": "Infant mortality"
      },
      "y": {
        "field": "Life expectancy",
        "type": "quantitative",
        "title": "Life Expectancy"
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Australia/Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.7},
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Life expectancy", "type": "quantitative", "title": "Life Expectancy"},
            {"field": "Infant mortality", "type": "quantitative", "title": "Infant mortality"},
            {"field": "Official language", "type": "nominal", "title": "Official language"},
            {"field": "Population", "type": "quantitative", "title": "Population"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'Australia' || datum['Country'] == 'India' || datum['Country'] == 'Somalia'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Life expectancy", "type": "quantitative", "title": "Life Expectancy"},
            {"field": "Infant mortality", "type": "quantitative", "title": "Infant mortality"},
            {"field": "Official language", "type": "nominal", "title": "Official language"},
            {"field": "Population", "type": "quantitative", "title": "Population"}
          ]
        }
      }
    ]
  }